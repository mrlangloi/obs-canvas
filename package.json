{
  "name": "obs-canvas",
  "version": "1.0.0",
  "private": true,
  "description": "Canvas overlay for Open Broadcaster Software (OBS)",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "installConfig": {
    "hoisting": "none"
  },
  "scripts": {
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "dev": "concurrently \"npm run dev -w frontend\" \"npm run dev -w backend\"",
    "install-all": "npm install"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.x.x"
  }
}
